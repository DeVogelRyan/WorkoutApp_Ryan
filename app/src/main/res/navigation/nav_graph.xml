<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/firstFragment">
    <fragment
        android:id="@+id/firstFragment"
        android:name="com.example.workoutapp_ryan.fragments.FirstFragment"
        android:label="fragment_first"
        tools:layout="@layout/fragment_first" >
        <action
            android:id="@+id/action_firstFragment_to_exerciseDetails"
            app:destination="@id/exerciseDetails" />
    </fragment>
    <fragment
        android:id="@+id/secondFragment"
        android:name="com.example.workoutapp_ryan.fragments.SecondFragment"
        android:label="fragment_second"
        tools:layout="@layout/fragment_second" />
    <fragment
        android:id="@+id/thirdFragment"
        android:name="com.example.workoutapp_ryan.fragments.ThirdFragment"
        android:label="fragment_third"
        tools:layout="@layout/fragment_third" >
        <action
            android:id="@+id/action_thirdFragment_to_userCreate2"
            app:destination="@id/userCreate2" />
    </fragment>
    <fragment
        android:id="@+id/detailUserFragment"
        android:name="com.example.workoutapp_ryan.fragments.DetailUserFragment"
        android:label="fragment_detail_user"
        tools:layout="@layout/fragment_confirm_weight" >
        <argument
            android:name="weight"
            app:argType="float" />
    </fragment>
    <fragment
        android:id="@+id/userCreate2"
        android:name="com.example.workoutapp_ryan.fragments.UserCreate"
        android:label="fragment_user_create"
        tools:layout="@layout/fragment_create_weight" >
        <action
            android:id="@+id/action_userCreate2_to_detailUserFragment"
            app:destination="@id/detailUserFragment" />
    </fragment>
    <fragment
        android:id="@+id/exerciseDetails"
        android:name="com.example.workoutapp_ryan.fragments.ExerciseDetails"
        android:label="fragment_exercise_details"
        tools:layout="@layout/fragment_exercise_details" >
        <argument
            android:name="name"
            app:argType="string" />
        <argument
            android:name="imgUrl"
            app:argType="string" />
        <argument
            android:name="bodyPart"
            app:argType="string" />
        <argument
            android:name="equipment"
            app:argType="string" />
        <argument
            android:name="target"
            app:argType="string" />
    </fragment>
</navigation>